NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Redis (Optional - will work without it)
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_TLS=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_REFRESH_SECRET=your-refresh-token-secret-min-32-characters
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email (Optional - verification emails won't send without it)
# For Gmail: Use App Password from https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false
EMAIL_FROM=noreply@yourdomain.com

# Cloudinary (Optional - file uploads will fail without it)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# OpenAI (Optional - will use mock content without it)
OPENAI_API_KEY=sk-or-v1-your-openai-api-key

# App URLs
APP_URL=http://localhost:8080
CLIENT_URL=http://localhost:8080
BACKEND_URL=http://localhost:5000
CORS_ORIGIN=http://localhost:8080
API_URL=http://localhost:5000

# Google OAuth (Optional - OAuth login won't work without it)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
 
# Unsplash
UNSPLASH_ACCESS_KEY=your-unsplash-access-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
